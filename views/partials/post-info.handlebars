<article class="post">
  <div class="title">
    <a href="{{post_content}}" target="_blank">{{title}}</a>
    <span>({{ post_content}})</span>
  </div>
  <div class="meta">
    {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{format_plural comments.length}} comment(s)</a>
  </div>
</article>